<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:measureAllChildren="true"
    tools:context="fr.wcs.wildcommunitysocks.AddPhotos">

    <!-- TODO: Update blank fragment layout


    -->
    <TextView
        android:id="@+id/newSocks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/newSocks"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"/>


        <Button
        android:id="@+id/cameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="50dp"
        android:layout_gravity="left" />

        <Button
        android:id="@+id/buttonUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createSocks"
        android:layout_marginBottom="75dp"
        android:layout_marginLeft="130dp"
        android:layout_gravity="bottom"/>

        <Button
        android:id="@+id/galleryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gallery"
        android:layout_marginTop="260dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="right"/>

    <TextView
        android:id="@+id/sockName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/sockName"
        android:layout_marginBottom="170dp"
        android:layout_marginLeft="50dp"
        android:layout_gravity="bottom"/>

    <EditText
        android:id="@+id/editsockName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=""
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="50dp"
        android:layout_gravity="bottom"/>


</FrameLayout>